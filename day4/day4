## #include <iostream>
#include <string>
using namespace std;
class Teacher
{  public:
    string name;
    int age;
     ~Teacher(){
        cout<<"hello i am a parent destructer";
    }

};
class student : public Teacher {
    public:
    int rollnu;

    ~student(){
        cout<<"hello i am a child destructer"<<endl;
    }

    void getinfo(){
        cout<<"name :"<<name<<endl;
        cout<<"age :"<<age<<endl;
        cout<<"rollnu :"<<rollnu<<endl;
    }
};



int main()
{
    student s1;
    s1.name="jitu";
    s1.age=18;
    s1.rollnu=1056;
    s1.getinfo();
    return 0;
}
